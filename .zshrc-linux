function git() {
    for i do
        lastArgument=$i
    done

    /usr/bin/git $@

    if [[ $? -eq 0 ]]
    then
        if [[ "$1" = "init" || "$1" = "clone" ]]
        then
            if [[ -d "$lastArgument" ]]
            then
                cd $lastArgument
            else if [[ "$lastArgument" != "init" && "$lastArgument" != "clone" ]]
            then
                cd $(echo $lastArgument | awk -F/ '{ print $NF }' | rev | sed 's/tig.//' | rev)
            fi
            fi 
        git-email-prompt.sh
        fi
    else
        return $?
    fi
}

